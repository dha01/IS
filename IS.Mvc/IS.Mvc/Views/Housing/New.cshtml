@using IS.Model.Item.Housing
@model HousingItem

@{
    ViewBag.Title = "Create";
}

<style>
    table {
        border: 4px double black; /* Рамка вокруг таблицы */
        border-collapse: collapse; /* Отображать только одинарные линии */
    }

    td:first-child {
        text-align: left; /* Выравнивание по левому краю */
        background: #ccc; /* Цвет фона ячеек */
        padding: 5px; /* Поля вокруг содержимого ячеек */
        border: 1px solid black; /* Граница вокруг ячеек */
    }

    td {
        padding: 5px; /* Поля вокруг содержимого ячеек */
        border: 1px solid black; /* Граница вокруг ячеек */
    }
</style>

<h2>Создание новой записи о корпусе</h2>

@using (@Html.BeginForm("Create", "Housing"))
{
    <table class="table housing">
        <tr>
            <td>Номер</td>
            <td><input type="text" name="Number" /></td>
        </tr>
        <tr>
            <td>Имя</td>
            <td><input type="text" name="Name" /></td>
        </tr>
        <tr>
            <td>Количество этажей</td>
            <td><input type="text" name="Level" /></td>
        </tr>
        <tr>
            <td>Описание</td>
	        <td><textarea type="text" name="Memo"></textarea></td>
        </tr>
    </table>
    <input type="submit" value="Создать" />
}
@Html.ActionLink("Просмотр списка корпусов", "List")