@using IS.Model.Item.Housing;
@using IS.Mvc.Models
@model HousingItem

@{
    ViewBag.Title = "Index";
}

<style>
    table {
        border: 4px double black; /* Рамка вокруг таблицы */
        border-collapse: collapse; /* Отображать только одинарные линии */
    }

    td:first-child {
        text-align: left; /* Выравнивание по левому краю */
        background: #ccc; /* Цвет фона ячеек */
        padding: 5px; /* Поля вокруг содержимого ячеек */
        border: 1px solid black; /* Граница вокруг ячеек */
    }

    td {
        padding: 5px; /* Поля вокруг содержимого ячеек */
        border: 1px solid black; /* Граница вокруг ячеек */
    }
</style>

<table class="table housing">
    <tr>
        <td>Номер</td>
        <td>@Model.Number</td>
    </tr>
    <tr>
        <td>Имя</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>"Этаж"</td>
        <td>@Model.Level</td>
    </tr>
    <tr>
        <td>Описание</td>
        <td>@Model.Memo</td>
    </tr>
</table>
@Html.ActionLink("Просмотр списка корпусов", "List")<br />
@if (Access.CheckRole("Housing.Updater"))
{
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })
}