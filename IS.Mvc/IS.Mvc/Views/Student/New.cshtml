@using IS.Model.Item.Person
@using IS.Model.Service
@model StudentItem

@{
	ViewBag.Title = "Create";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<h2>Зачисление студента в группу</h2>

@using (@Html.BeginForm("Create", "Student"))
{
	<table class="table student">
		<tr>
			<td>Имя</td>
			<td><input type="text" name="LastName" /></td>
		</tr>
		<tr>
			<td>Фамилия</td>
			<td><input type="text" name="FirstName" /></td>
		</tr>
		<tr>
			<td>Отчество</td>
			<td><input type="text" name="FatherName" /></td>
		</tr>
		tr>
			<td>День Рождения</td>
			<td><input type="text" name="Birthday" /></td>
		</tr>
		<tr>
			<td>Факультет</td>
			<td>
				<select name="TeamId">
					@foreach (var team in new TeamService().GetList())
					{
						<option value="@team.Id">@team.Name</option>
					}
				</select>
			</td>
</tr>
	</table>
	<input type="submit" value="Создать" />
}
@Html.ActionLink("Просмотр списка студентов", "List")