@using IS.Model.Item.Person;
@using IS.Model.Service
@using IS.Mvc.Models
@model StudentItem

@{
	ViewBag.Title = "Index";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<table class="table student">
	<tr>
		<td>Фамилия</td>
		<td>@Model.LastName</td>
	</tr>
	<tr>
		<td>Имя</td>
		<td>@Model.FirstName</td>
	</tr>
	<tr>
		<td>Отчество</td>
		<td>@Model.FatherName</td>
	</tr>
	<tr>
		<td>День Рождения</td>
		<td>@Model.Birthday</td>
	</tr>
	<tr>
		<td>Индетификатор группы</td>
		<td>
			@foreach (var team in new TeamService().GetList())
			{
				@team.Name
			}
		</td>
	</tr>
</table>
@Html.ActionLink("Просмотр списка студентов", "List")<br />