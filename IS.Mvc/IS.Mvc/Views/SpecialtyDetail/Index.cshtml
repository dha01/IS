@using IS.Model.Item.Specialty;
@using IS.Mvc.Models
@model SpecialtyDetailItem

@{
	ViewBag.Title = "Index";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<table class="table specialty_detail">
	<tr>
		<td>Текущая дата</td>
		<td>@Model.ActualDate</td>
	</tr>
	<tr>
		<td>Индитификатор специальности</td>
		<td>@Model.SpecialtyId</td>
	</tr>
	<tr>
		<td>Количество семестров</td>
		<td>@Model.SemestrCount</td>
	</tr>
	<tr>
		<td>Период обучения</td>
		<td>@Model.TrainingPeriod</td>
	</tr>
	<tr>
		<td>Квалификация</td>
		<td>@Model.Qualification</td>
	</tr>
	<tr>
		<td>Форма обучения</td>
		<td>@Model.FormStudy</td>
	</tr>
	<tr>
		<td>Количество платных мест</td>
		<td>@Model.PaySpace</td>
	</tr>
	<tr>
		<td>Количество бюджетных мест</td>
		<td>@Model.LowcostSpace</td>
	</tr>
</table>
@Html.ActionLink("Просмотр списка учебных курсов", "List")<br />
@if (Access.CheckRole("SpecialtyDetail.Updater"))
{
	@Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })
}
