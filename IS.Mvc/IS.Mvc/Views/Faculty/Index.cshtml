@using IS.Model.Item.Faculty;
@using IS.Mvc.Models
@model FacultyItem

@{
	ViewBag.Title = "Index";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<table class="table faculty">
	<tr>
		<td class="t_head">Сокращенное название</td>
		<td>@Model.ShortName</td>
	</tr>
	<tr>
		<td class="t_head">Полное название</td>
		<td>@Model.FullName</td>
	</tr>
</table>
<div align="left" style="float: left">
	
	@if (Access.CheckRole("Faculty.Editor"))
	{
		@Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })
	}
</div>
<div align="right">
	
	@if (Access.CheckRole("Faculty.Deleter"))
	{
		@Html.ActionLink("Удалить", "Delete", new { id = Model.Id })
	}
</div>