@using IS.Model.Item.Faculty
@model FacultyItem
@{
	ViewBag.Title = "Create";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<h2>Создание новой записи о факультете</h2>

@using (@Html.BeginForm("Create", "Faculty"))
{
	<table class="table faculty">
		<tr>
			<td>Сокращенное название</td>
			<td><input type="text" name="ShortName" /></td>
		</tr>
		<tr>
			<td>Полное название</td>
			<td><input type="text" name="FullName" /></td>
		</tr>
	</table>
	<input type="submit" value="Создать" />
}
@Html.ActionLink("Просмотр списка факультетов", "List")